// Shared delete modal (blockCommon)
#delete-modal.modal.hidden
  .modal-content
    span.modal-close(aria-label=t('blockCommon.deleteModal.closeAriaLabel')) &times;
    h2= t('blockCommon.deleteModal.title')
    p.modal-message= t('blockCommon.deleteModal.message')
    .modal-buttons
      button#delete-confirm-btn.confirm= t('blockCommon.deleteModal.confirm')
      button#delete-cancel-btn.cancel= t('blockCommon.deleteModal.cancel')

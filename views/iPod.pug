extends layoutMin
block content
  link(rel='stylesheet' href='/css/ipod.css')
  script(src='/js/jquery-1.7.1.min.js')
  script(src='/js/jquery.knob.js')
  script(src='/js/iPod.js')
  div#ipod
    #homemenu.tile
      #screen
        .battery-tip
        .battery ||||
        .title
          span iPod
        ul
          a.select(href="#music")
            li Music
            span.arrow >
          a(href='#extras')
            li Extras
            span.arrow >
      #clickwheel
        #innerwheel
          div(style="display: inline; width: 234px; height: 234px; opacity: 0.1;")
            input(type="text" value="75" class="dial" data-width="234" data-cursor="true" data-thickness=".9" data-fgcolor="#E9EDEC" data-bgcolor="#E9EDEC" data-displayinput="true" style="width: 121px; height: 78px; position: absolute; vertical-align: middle; margin-top: 78px; margin-left: -177px; border: 0px none; background: rgba(0, 0, 0, 0) none repeat scroll 0% 0%; font: bold 58px Arial; text-align: center; color: rgb(233, 237, 236); padding: 0px; -moz-appearance: none;")
doctype html
html(lang=lang || 'en')
  head
    block head
      title= title
      if description
        meta(name="description" content=description)
      meta(name="viewport" content="width=device-width, initial-scale=1.0")
      link(rel="stylesheet" href="https://unpkg.com/easymde/dist/easymde.min.css")
      link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet")
      link(rel='stylesheet' href='/css/style.css')
      link(rel='stylesheet' href='/css/footer.css')
      link(rel="stylesheet", href="/css/auth.css")
      script(src="/js/auth.js")
      if title === 'Room Directory'
        link(rel='stylesheet' href='/css/rooms.css')
      link(rel='shortcut icon' href='/assets/img/favicon.ico')
      include schema.pug
      script.
        window.MathJax = {
          loader: {
            load: ['input/tex']
          },
          tex: {
            inlineMath: [['$', '$'], ['\\(', '\\)']],
            displayMath: [['$$', '$$'], ['\\[', '\\]']],
            processEscapes: true
          },
          options: {
            skipHtmlTags: ['script','noscript','style','textarea','pre','code']
          },
          output: {
            displayOverflow: 'linebreak',
            linebreaks: {
              inline: true,
              width: '100%',
              lineleading: 0.2,
              LinebreakVisitor: null
            }
          }
        };
      script(src='https://cdn.jsdelivr.net/npm/mathjax@4.0.0-beta.7/tex-mml-chtml.js' async)
  body(data-is-logged-in=user ? "true" : "false" data-user-id=user ? user.id : null)
    -
      var monthNames = ['January', 'February', 'March', 'April', 'May', 'June',
                        'July', 'August', 'September', 'October', 'November', 'December']
    div.auth-wrapper
      p#welcome-message Welcome, User!
      button#nav-logout(type="button" style="display:none;") Logout
      a#nav-login(href="/login" style="display:none;") Login / Sign Up
    .navbar
      a(href='/')
        h1.logo Daily Page
      header
        a(href="#main-menu"
          id="main-menu-toggle"
          class="menu-toggle"
          aria-label="Open main menu")
          span(class="sr-only") Open main menu
          span(class="fa fa-bars" aria-hidden="true")
        nav(class="nav-items" id="main-menu" class="main-menu")
          block nav
        a(href="#main-menu-toggle"
          class="backdrop"
          tabindex="-1"
          aria-hidden="true" hidden)
    block content

    footer.footer(role="contentinfo")
      .footer-content
        p Â© #{new Date().getFullYear()} Daily Page
        a(href="/privacy") Privacy Policy

    block scripts

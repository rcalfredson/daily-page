extends ../layout

block nav
  include ../navLinks

block append head
  link(rel='stylesheet', href='/css/tags.css')

block content
  .tags-overview-container
    h1= t('tags.title')
    p= t('tags.intro')

    // ðŸ‘‡ Timeframe buttons
    .timeframe-selector
      if timeframes && timeframes.length
        each tf in timeframes
          button.timeframe-btn(
            data-timeframe=tf.key
            class=(timeframe === tf.key ? 'active' : '')
          )= tf.label

    // Tag Cloud
    .tag-cloud
      each tag in tags
        a.tag-chip(href=`/tags/${encodeURIComponent(tag._id)}`, style=`font-size: ${Math.min(24, 12 + tag.totalBlocks)}px`)
          | #{tag._id} (#{tag.totalBlocks})

  script.
    document.querySelectorAll('.timeframe-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const timeframe = this.getAttribute('data-timeframe');
        window.location.href = `/tags?timeframe=${timeframe}`;
      });
    });

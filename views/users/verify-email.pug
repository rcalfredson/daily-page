extends ../layout

block nav
  include ../navLinks

block append head
  link(rel='stylesheet', href='/css/verify-email.css')

block scripts
  script(src='/js/verify-email.js')

block content
  .verify-email-container(lang=(uiLang || 'en'))
    h1= t('verifyEmail.header.title')
    p#verification-status(
      data-checking=t('verifyEmail.status.checking')
      data-missing-token=t('verifyEmail.status.missingToken')
      data-generic-failure=t('verifyEmail.status.genericFailure')
      data-unexpected-error=t('verifyEmail.status.unexpectedError')
      data-success=t('verifyEmail.status.success')
      data-invalid-or-expired=t('verifyEmail.status.invalidOrExpired')
    )= t('verifyEmail.status.checking')

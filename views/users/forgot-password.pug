extends ../layout

block nav
  include ../navLinks

block append head
  link(rel="stylesheet", href="/css/forgot-password.css")

block scripts
  script(src="/js/forgot-password.js")

block content
  .forgot-password-container(lang=(uiLang || 'en'))
    h1= t('forgotPassword.header.title')
    p= t('forgotPassword.header.subtitle')

    form#forgotPasswordForm
      .form-group
        label(for="email")= t('forgotPassword.form.email.label')
        input#email(
          type="email"
          name="email"
          required
          placeholder=t('forgotPassword.form.email.placeholder')
        )
      button(type="submit").reset-button= t('forgotPassword.form.submit')

    .form-feedback(
      style="display: none;"
      data-success=t('forgotPassword.feedback.successGeneric')
      data-missing-email=t('forgotPassword.feedback.missingEmail')
      data-generic-error=t('forgotPassword.feedback.genericError')
      data-unexpected-error=t('forgotPassword.feedback.unexpectedError')
    )= ''

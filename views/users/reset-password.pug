extends ../layout

block nav
  include ../navLinks

block append head
  link(rel="stylesheet", href="/css/reset-password.css")

block scripts
  script(src="/js/reset-password.js")

block content
  .reset-password-container(lang=(uiLang || 'en'))
    h1= t('resetPassword.header.title')
    if t('resetPassword.header.subtitle')
      p= t('resetPassword.header.subtitle')
    form#resetPasswordForm
      input(type="hidden" id="token")
      .form-group
        label(for="newPassword")= t('resetPassword.form.newPassword.label')
        input#newPassword(
          type="password"
          name="newPassword"
          required
          placeholder=t('resetPassword.form.newPassword.placeholder')
        )
      button(type="submit").reset-button= t('resetPassword.form.submit')
    .form-feedback(
      style="display:none;"
      data-missing-token=t('resetPassword.feedback.missingToken')
      data-missing-fields=t('resetPassword.feedback.missingFields')
      data-invalid-or-expired=t('resetPassword.feedback.invalidOrExpired')
      data-success=t('resetPassword.feedback.success')
      data-generic-error=t('resetPassword.feedback.genericError')
      data-unexpected-error=t('resetPassword.feedback.unexpectedError')
    )= ''

extends layout

block nav
  include navLinks

block append head
  link(rel="stylesheet", href="/css/about.css")

block content
  .about-container
    h1.page-title= t('about.title')
    p.tagline= t('about.tagline')

    //–— Mission  
    .about-section
      h2.section-title= t('about.mission.h2')
      p= t('about.mission.p1')
      p= t('about.mission.p2')

    //–— How it works  
    .about-section.dark
      h2.section-title= t('about.how.h2')
      ul.features
        li
          b= t('about.how.features.rooms.label')
          |  #{t('about.how.features.rooms.text')}
        li
          b= t('about.how.features.blocks.label')
          |  #{t('about.how.features.blocks.text')}
        li
          b= t('about.how.features.privacy.label')
          |  #{t('about.how.features.privacy.text')}
        li
          b= t('about.how.features.markdown.label')
          |  #{t('about.how.features.markdown.text')}
        li
          b= t('about.how.features.trends.label')
          |  #{t('about.how.features.trends.text')}
        li
          b= t('about.how.features.streaks.label')
          |  #{t('about.how.features.streaks.text')}

    //–— Origin story  
    .about-section
      h2.section-title= t('about.origin.h2')
      p= t('about.origin.p1')
      p= t('about.origin.p2')

    //–— What’s next  
    .about-section.dark
      h2.section-title= t('about.next.h2')
      p= t('about.next.p1')
      p= t('about.next.p2')

    //–— CTA  
    .cta
      a.btn.primary(href=uiPath("/rooms"))= t('about.cta.rooms')
      a.btn.secondary(href="/signup")= t('about.cta.signup')
